{
  "name": "phing/task-ftpdeploy",
  "description": "Deploys a set of files to a remote FTP server.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "LGPL-3.0-only",
  "type": "phing-extension",
  "authors": [
    {
      "name": "Siad Ardroumli",
      "email": "siad.ardroumli@gmail.com"
    }
  ],
  "require": {
    "php": ">= 7.1",
    "ext-ftp": "*"
  },
  "require-dev": {
    "phing/phing": "3.0.x-dev",
    "phpunit/phpunit": "^9.2",
    "mehr-als-nix/php-ftp-client": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Phing\\Tasks\\Ext\\": "src/"
    }
  },
  "extra": {
    "phing-custom-taskdefs": {
      "ftpdeploy": "Phing\\Tasks\\Ext\\FtpDeployTask"
    }
  }
}
